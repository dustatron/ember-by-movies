
<h1>Movie Search</h1>
  <div id="search" class="row">
    <div class="form-inline">
      <div class="form-group">
            {{ input type="text" class="form-control" value=searchString action="getSearchData" placeholder="Movie Title" }}

        </div>
        <button {{action "getSearchData"}}type="submit" class="btn btn-default">Submit</button>

    </div>


  </div>

<hr>





<div class="row">

    {{#each model as |list|}}



    <div class="col-md-10 add-box">
      <div class="row no-marg">
        <div class="col-md-12 top-title">
          <h3> {{list.title}}</h3>
        </div>
      </div>
      <div class="row middle-row">
        <div class="col-md-3">
          <img  src="https://image.tmdb.org/t/p/w185/{{list.poster_path}}" alt="">
        </div>
        <div class="col-md-6">

          <span class='overview'>{{list.overview}}</span>
        </div>
      </div>
      <div class="row add-row">
        <div class="col-md-5">
          <div class="date"><strong>Release Date: {{list.release_date}}</strong></div>

        </div>
        <div class="col-md-7 text-right">
          {{#link-to 'posts'}}
            <span class="add-movie" {{action "pushMovie" list.id}}>
              <i class="fa fa-plus" aria-hidden="true"></i>
            </span>
          {{/link-to}}

        </div>
      </div>

    </div>

    {{else}}
      <br>
        <p>Search Results will display here.</p>


    {{/each}}


</div>

{{outlet}}
