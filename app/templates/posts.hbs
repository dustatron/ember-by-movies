<div class="container">

    <section>
    {{#each model as |post|}}
      <div class="col-md-6">
        <h3 class="title">{{post.title}}</h3>
        <p>Votes: {{post.vote}}</p>
        <p class="date"> Release Date: {{post.date}}</p>
        <p class='image'><img src="http://image.tmdb.org/t/p/w185/{{post.image}}" alt=""></p>
        <p class='overview'>{{post.overview}}</p>
          <button {{action 'voteUp' post.id}}>Up Vote</button>
          <button {{action 'voteDown' post.id}}>Down Vote</button>
      </div>
    {{/each}}
    </section>


</div>

{{outlet}}
